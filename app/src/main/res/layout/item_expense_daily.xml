<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/expenseNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Night out with friends"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintBottom_toTopOf="@+id/expenseCategoryValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/incomeTitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/expenseCategoryValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Saturday"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="14sp"
        app:layout_goneMarginBottom="8dp"
        app:layout_constraintHorizontal_weight="1.5"
        app:layout_constraintEnd_toStartOf="@+id/incomeValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseNameValue"
        app:layout_constraintBottom_toTopOf="@+id/expensesDailyView" />

    <TextView
        android:id="@+id/incomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Income"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="14sp"
        android:gravity="right"
        android:textStyle="bold"
        android:textColor="@color/colorPositive"
        android:visibility="gone"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/incomeValue"
        app:layout_constraintStart_toEndOf="@+id/expenseNameValue"
        app:layout_constraintTop_toTopOf="@+id/expenseNameValue"
        app:layout_constraintEnd_toEndOf="@+id/incomeValue"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/incomeValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Ksh 15,000.00"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textSize="14sp"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/expenseCategoryValue"
        app:layout_constraintStart_toEndOf="@+id/expenseCategoryValue"
        app:layout_constraintEnd_toStartOf="@+id/expensesValue"
        app:layout_constraintTop_toBottomOf="@+id/incomeTitle" />

    <TextView
        android:id="@+id/expensesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Expenses"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="14sp"
        android:gravity="end"
        android:textStyle="bold"
        android:textColor="@color/colorNegative"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/expensesValue"
        app:layout_constraintStart_toEndOf="@+id/incomeTitle"
        app:layout_constraintTop_toTopOf="@+id/incomeTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/expensesValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="Ksh 15,000.00"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textSize="14sp"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/incomeValue"
        app:layout_constraintStart_toEndOf="@+id/incomeValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expensesTitle"
        tools:visibility="visible" />

    <View
        android:id="@+id/expensesDailyView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:alpha="0.6"
        android:background="@drawable/toolbar_reverse"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseCategoryValue" />

</androidx.constraintlayout.widget.ConstraintLayout>